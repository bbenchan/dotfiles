#!/bin/bash

DIR="$HOME/.config/rofi"

rofi_command="rofi -theme $DIR/themes/asroot.rasi"

# Apps
terminal=" Alacritty"
files=" Pcmanfm"
editor=" Leafpad"
vim=" Vim"

# Variable passed to rofi
options="$terminal\n$files\n$editor\n$vim"

chosen="$(echo -e "$options" | $rofi_command -p "Run as root(#)" -dmenu -selected-row 0)"
case $chosen in
    $terminal)
        apps_as_root 'alacritty --class alacritty-float,Alacritty-float'
        ;;
    $files)
        apps_as_root 'dbus-run-session pcmanfm'
        ;;
    $editor)
        apps_as_root leafpad
        ;;
    $vim)
        apps_as_root 'alacritty --class alacritty-float,Alacritty-float -e vim'
        ;;
esac


